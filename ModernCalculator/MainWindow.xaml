<Window x:Class="ModernCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModernCalculator"
        mc:Ignorable="d"
        Title="Calculator" 
        Height="555" Width="300"
        MinHeight="555" MinWidth="300"
        Background="#1c1c1c"
        ResizeMode="NoResize"
        WindowStyle="None"
        >
    <Grid>
        <!--#region Definicja Siatki-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--#endregion-->
        
        <!--#region Pasek górny-->
        <Grid Grid.Row="0" Grid.ColumnSpan="4">
            <!--#region Definicja Kolumna Paska-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Rectangle Margin="1" Grid.ColumnSpan="3" Stroke="#FF707070"/>
            <TextBlock Margin="5" Foreground="WhiteSmoke" VerticalAlignment="Center" Grid.Column="0">Calculator</TextBlock>

            <Button Grid.Column="1" Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="10" BorderThickness="1" Margin="3">_</Button>
            <Button Grid.Column="2" Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="10" BorderThickness="1" Margin="3">X</Button>
            
            <!--#endregion-->
        </Grid>
        <!--#endregion-->
        
        <!--#region Wyświetlanie obliczeń-->
        <TextBox Background="#1c1c1c" Foreground="#4a4a4a" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Margin="2" TextWrapping="NoWrap" VerticalAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" BorderThickness="0" FontSize="30">0</TextBox>
        <TextBox Background="#1c1c1c" Foreground="WhiteSmoke" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Margin="2" TextWrapping="NoWrap" VerticalAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" BorderThickness="0" FontSize="50">0</TextBox>
        <!--#endregion-->
        
        <!--#region Przyciski-->
        <Button Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="25" BorderThickness="1" Margin="1" Grid.Row="3" Grid.Column="0">CE</Button>
        <Button Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="25" BorderThickness="1" Margin="1" Grid.Row="3" Grid.Column="1">ⁿ√</Button>
        <Button Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="25" BorderThickness="1" Margin="1" Grid.Row="3" Grid.Column="2">xⁿ</Button>
        <Button Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="25" BorderThickness="1" Margin="1" Grid.Row="3" Grid.Column="3">/</Button>

        <Button Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="25" BorderThickness="1" Margin="1" Grid.Row="4" Grid.Column="0">7</Button>
        <Button Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="25" BorderThickness="1" Margin="1" Grid.Row="4" Grid.Column="1">8</Button>
        <Button Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="25" BorderThickness="1" Margin="1" Grid.Row="4" Grid.Column="2">9</Button>
        <Button Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="25" BorderThickness="1" Margin="1" Grid.Row="4" Grid.Column="3">*</Button>

        <Button Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="25" BorderThickness="1" Margin="1" Grid.Row="5" Grid.Column="0">4</Button>
        <Button Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="25" BorderThickness="1" Margin="1" Grid.Row="5" Grid.Column="1">5</Button>
        <Button Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="25" BorderThickness="1" Margin="1" Grid.Row="5" Grid.Column="2">6</Button>
        <Button Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="25" BorderThickness="1" Margin="1" Grid.Row="5" Grid.Column="3">-</Button>

        <Button Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="25" BorderThickness="1" Margin="1" Grid.Row="6" Grid.Column="0">1</Button>
        <Button Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="25" BorderThickness="1" Margin="1" Grid.Row="6" Grid.Column="1">2</Button>
        <Button Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="25" BorderThickness="1" Margin="1" Grid.Row="6" Grid.Column="2">3</Button>
        <Button Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="25" BorderThickness="1" Margin="1" Grid.Row="6" Grid.Column="3">+</Button>

        <Button Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="25" BorderThickness="1" Margin="1" Grid.Row="7" Grid.Column="0">C</Button>
        <Button Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="25" BorderThickness="1" Margin="1" Grid.Row="7" Grid.Column="1">0</Button>
        <Button Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="25" BorderThickness="1" Margin="1" Grid.Row="7" Grid.Column="2">,</Button>
        <Button Background="#1c1c1c" Foreground="WhiteSmoke" FontSize="25" BorderThickness="1" Margin="1" Grid.Row="7" Grid.Column="3">=</Button>
        <!--#endregion-->
    </Grid>
</Window>
